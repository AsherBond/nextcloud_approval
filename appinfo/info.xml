<?xml version="1.0"?>
<info>
	<id>approval</id>
	<name>Approval</name>
	<summary>Let users approve or disapprove files</summary>
	<description><![CDATA[Approve/reject files based on hidden tags rules.]]></description>
	<version>0.0.4</version>
	<licence>agpl</licence>
	<author>Julien Veyssier</author>
	<namespace>Approval</namespace>
	<documentation>
		<developer>https://github.com/eneiluj/approval</developer>
	</documentation>
	<category>files</category>
	<category>workflow</category>
	<website>https://github.com/eneiluj/approval</website>
	<bugs>https://github.com/eneiluj/approval/issues</bugs>
	<screenshot>https://github.com/nextcloud/eneiluj/raw/master/img/screenshot_1.jpg</screenshot>
	<screenshot>https://github.com/nextcloud/eneiluj/raw/master/img/screenshot_2.jpg</screenshot>
	<screenshot>https://github.com/nextcloud/eneiluj/raw/master/img/screenshot_3.jpg</screenshot>
	<dependencies>
		<database min-version="9.4">pgsql</database>
		<database>sqlite</database>
		<database min-version="5.5">mysql</database>
		<nextcloud min-version="22" max-version="22"/>
	</dependencies>
	<settings>
		<admin>OCA\Approval\Settings\Admin</admin>
		<admin-section>OCA\Approval\Settings\AdminSection</admin-section>
	</settings>
	<activity>
		<settings>
			<setting>OCA\Approval\Activity\Setting</setting>
		</settings>
		<filters>
			<filter>OCA\Approval\Activity\Filter</filter>
		</filters>
		<providers>
			<provider>OCA\Approval\Activity\ApprovalProvider</provider>
		</providers>
	</activity>
</info>
